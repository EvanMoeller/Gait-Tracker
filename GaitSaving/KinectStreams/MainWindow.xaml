<Window x:Class="KinectStreams.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FRI - Kinect Gait Recording" Height="1080" Width="1920" Loaded="Window_Loaded" Closed="Window_Closed" WindowState="Maximized">
    <Grid>
        <Image Name="camera" />
        <Canvas Name="canvas" />
        <Grid Style="{StaticResource GridButtonsStyle}">
            <StackPanel Style="{StaticResource StackPanelButtonsStyle}">
                <Button Content="Start Recording" Style="{StaticResource ButtonStyle}" Click="StartRecord" />
                <Button Content="Stop Recording" Style="{StaticResource ButtonStyle}" Click="StopRecord" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
