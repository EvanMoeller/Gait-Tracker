<Window x:Class="KinectStreams.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FRI - Kinect Gait Recording" Height="1080" Width="1920" Loaded="Window_Loaded" Closed="Window_Closed" WindowState="Maximized">
    <Grid>
        <Image Name="camera" />
        <Canvas Name="canvas" />
        <Grid Style="{StaticResource GridButtonsStyle}">
            <StackPanel Style="{StaticResource StackPanelButtonsStyle}">
                <Button Content="Start Recording Side" Style="{StaticResource ButtonStyle}" Click="StartRecord" />
                <Button Content="Stop Recording Side" Style="{StaticResource ButtonStyle}" Click="StopRecord" />
                <Rectangle Name="rb" Width="35" Height="35" Fill="Black"/>
                <Button Content="Front Snapshot" Style="{StaticResource ButtonStyle}" Click="FrontSnapshot" />
                <Rectangle Name="br" Width="35" Height="35" Fill="Blue"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
